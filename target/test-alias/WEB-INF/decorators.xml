<?xml version="1.0" encoding="UTF-8"?>
<decorators dedaultdir="/decorators">
    <!--any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/api*</pattern>
        <!-- nam trong excluded la khong apply cho bat ki giao dien gi ca co trong nay -->
    </excludes>
    <!-- apply Sitemesh default template -->
    <decorator name="admin" page ="/decorators/admin.jsp">
        <pattern>/admin*</pattern>
        <!-- nam trong decorator la apply cho bat ki giao dien gi co trong nay -->
    </decorator>
    <decorator name="web" page="/decorators/web.jsp">
        <pattern>/*</pattern>
    </decorator>
    <decorator name="login" page="/decorators/login.jsp">
        <pattern>/login</pattern>
        <pattern>/signup</pattern>
    </decorator>
</decorators>